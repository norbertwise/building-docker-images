pipeline{

	agent {
        docker{
            image 'node:19-alpine'
        }
    }

	
	

	stages {
	    
	    stage('checkout') {

			steps {
				git branch : 'main' , url : 'https://github.com/norbertwise/building-docker-images.git'
			}
		}

		stage('Build') {

			steps {
				sh 'docker build -t versiondapp:latest .'
			}
		}

		stage('Login') { environment{
			DOCKER_IMAGE = 'node:19-alpine'
			REGISTRY_CREDENTIALS = credentials('docker_cred')
		}

			steps {
				scripts{
					def customImage = docker.build("patnorbs/myapp:v1.0")
					    docker.withRegistry('https://registry.hub.docker.com', 'docker_cred') {
					customImage.push()		
						}
				}
		
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		
	}

	post {
		always {
			sh 'docker logout'
		}
    }
}