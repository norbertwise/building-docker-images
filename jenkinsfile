pipeline{

	agent {
        docker{
            image 'node:19-alpine'
        }
	}

	environment{
		withDockerRegistry = (credentialsId 'docker_cred', url: 'https://registry.hub.docker.com') 
    
	}
	stages {
	    
	    stage('checkout') {

			steps {
				checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/norbertwise/building-docker-images.git']])
			sh 'npm --verbose install'
			
			}
		}

		
						
						
				}
			}
		

			
				
			
		

	

