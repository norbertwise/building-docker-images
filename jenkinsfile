pipeline{

	agent {
        docker{
            image 'node:19-alpine'
        }
    }

	environment {
		DOCKERHUB_CREDENTIALS=credentials('docker_cred')
	}

	stages {
	    
	    stage('checkout') {

			steps {
				git 'https://github.com/norbertwise/building-docker-images.git'
			}
		}

		stage('Build') {

			steps {
				sh 'docker build -t versiondapp:latest .'
			}
		}

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				sh 'docker push patnorbs/versioned:latest'
			}
		}
	}

	post {
		always {
			sh 'docker logout'
		}
    }
}