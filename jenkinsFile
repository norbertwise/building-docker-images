pipeline{
    agent{
        docker{
            image 'node:19-alpine'
        }
        
    }

    environment {
        LOGIN_CREDS = credentials('dockerbuild')
    }

stages{
    stage('git code'){
        steps{
            git branch : 'main' , url : 'https://github.com/norbertwise/building-docker-images.git'                                   
        }
    }

stage('docker  build'){
    steps{
        sh 'docker build -t web-app:v1.0 .'
        
    }
}



    }




    
}







